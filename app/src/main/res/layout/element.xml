<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <android.support.v7.widget.CardView
            android:id="@+id/an_element"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="8dp"
            android:onClick="moreInfo"
            app:cardBackgroundColor="#bbbbbb">

        <TextView
                android:id="@+id/an_element_text"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="45dp"
                android:paddingLeft="160dp"
                android:paddingRight="10dp"
                android:autoSizeTextType="uniform"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:shadowColor="#111111"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="3"
        />
        <ImageView
                android:id="@+id/an_element_aqi"
                android:src="@drawable/aqi_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
        />
        <ImageView
                android:id="@+id/an_element_star"
                android:src="@drawable/star_shell"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="changeStar"
        />

    </android.support.v7.widget.CardView>


</LinearLayout>